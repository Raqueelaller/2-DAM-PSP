package hilos1;

import java.util.Iterator;

public class TareaHilo implements Runnable{

	private String nombreHilo;
	
	public TareaHilo (String nombre) {
		this.nombreHilo=nombre;
		System.out.println("creando"+nombreHilo);
	}
	
	@Override
	public void run() {
		// TODO Auto-generated method stub
		System.out.println("Ejecutando"+nombreHilo);
		
		
		try {
			//el hilo realiza una tarea sencilla:contar
			for (int i = 1; i <=5; i++) {
				System.out.println("hilo: "+nombreHilo+", contador: "+i);
				// hace una pequeÃ±a pausa para asimilar el trabajo y mostrar concurencia
				Thread.sleep(numAleatorio(30000,10000)); // pausa de 5000milisegundos (5 segundos)
				
			}
			}catch(InterruptedException x) {
				System.out.println("el hilo "+nombreHilo+ "fue interrumpido.");
			}
		System.out.println("Terminando"+nombreHilo);
			
		}
	public static int numAleatorio(int maximo, int minimo) {
		int numAleatorio=(int) ((Math.random()*(((maximo+minimo)/2)+1))+minimo);
		return numAleatorio;
	}		
		
	}
	
	
	



